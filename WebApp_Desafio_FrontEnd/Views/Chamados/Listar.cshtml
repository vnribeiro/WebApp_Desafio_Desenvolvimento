@model WebApp_Desafio_FrontEnd.ViewModels.ChamadoViewModel

@{
    ViewData["Title"] = "Chamados";
}

<div class="row mt-3">
    @* <div class="col-sm-12 col-md-12 col-lg-6 no-margins text-right pt-2" style="padding: 4px 0 0 0;background-color: #f00"> *@
    <div class="col-lg-6 text-left">
        <button type="button" class="btn btn-outline btn-primary" id="btnRelatorio">
            <i class="fa fa-file-pdf-o"></i> Relatório
        </button>
    </div>
    <div class="col-lg-6 text-right">
        <button type="button" class="btn btn-outline btn-primary" id="btnAdicionar">
            <i class="fa fa-plus"></i> Adicionar
        </button>
        <button type="button" class="btn btn-outline btn-primary" id="btnEditar">
            <i class="fa fa-pencil"></i> Editar
        </button>
        <button type="button" class="btn btn-outline btn-danger" id="btnExcluir">
            <i class="fa fa-trash"></i> Excluir
        </button>
    </div>
</div>

<div class="row mt-3">
    <div class="col-lg-12">

        <table class="table table-striped table-bordered table-hover" id="dataTables-Chamados">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ID)</th>
                    <th>@Html.DisplayNameFor(model => model.Assunto)</th>
                    <th>@Html.DisplayNameFor(model => model.Solicitante)</th>
                    <th>@Html.DisplayNameFor(model => model.Departamento)</th>
                    <th>@Html.DisplayNameFor(model => model.DataAbertura)</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

@section styles 
{
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts 
{
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>

    <script src="~/js/Chamados/Listar.js" asp-append-version="true"></script>
}
